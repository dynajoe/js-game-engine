doctype 5
html
   head
      link(rel="shortcut icon", href="/favicon.ico")

      title
         block title
            | express-starter

      block styles
         != css("reset")
         != css("skin")

      block scripts
         != js("jquery")
         != js("keyboard")
         != js("utility")
         != js("entities")
         != js("controller")
         != js("index")

   - var viewDir = locals.root + "/";
   - var view = locals.filename.replace(viewDir, "").replace(".jade", "");
   - var viewClass = view.replace(/\//g, "-");
   body(class=viewClass)
      block body